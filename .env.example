# Hylo Multi-LLM Routing Environment Variables

# LLM Provider API Keys
# ======================

# Cerebras API Keys (multiple keys for rotation)
CEREBRAS_API_KEY_1=your_cerebras_api_key_1_here
CEREBRAS_API_KEY_2=your_cerebras_api_key_2_here
CEREBRAS_API_KEY_3=your_cerebras_api_key_3_here

# Google Gemini API Keys (multiple keys for rotation)  
GOOGLE_API_KEY_1=your_google_gemini_api_key_1_here
GOOGLE_API_KEY_2=your_google_gemini_api_key_2_here
GOOGLE_API_KEY_3=your_google_gemini_api_key_3_here

# Groq API Keys (multiple keys for rotation)
GROQ_API_KEY_1=your_groq_api_key_1_here
GROQ_API_KEY_2=your_groq_api_key_2_here
GROQ_API_KEY_3=your_groq_api_key_3_here

# LangSmith Observability
# =======================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=hylo-llm-routing

# Vercel Configuration
# ===================
VERCEL_ENV=development
VERCEL_URL=http://localhost:3000

# Rate Limiting & Quotas
# ======================

# Cerebras Quotas (tokens per month)
CEREBRAS_MONTHLY_QUOTA=1000000
CEREBRAS_DAILY_QUOTA=50000
CEREBRAS_RPM_LIMIT=100

# Google Gemini Quotas
GEMINI_MONTHLY_QUOTA=1000000
GEMINI_DAILY_QUOTA=50000
GEMINI_RPM_LIMIT=15

# Groq Quotas
GROQ_DAILY_QUOTA=100000
GROQ_RPM_LIMIT=240
GROQ_TOKENS_PER_MINUTE=14400

# Application Configuration
# ========================

# Default routing preferences
DEFAULT_COMPLEXITY_THRESHOLD_SIMPLE=3
DEFAULT_COMPLEXITY_THRESHOLD_COMPLEX=7

# Fallback chain configuration
ENABLE_FALLBACK_CHAINS=true
MAX_FALLBACK_ATTEMPTS=3
FALLBACK_TIMEOUT_MS=5000

# Health monitoring
HEALTH_CHECK_INTERVAL_MS=30000
PROVIDER_TIMEOUT_MS=10000

# Cost tracking
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD_USD=10.00

# Development/Testing
# ==================

# Enable test mode (uses mock providers)
TEST_MODE=false

# Enable debug logging
DEBUG_LOGGING=false

# Test provider configuration
TEST_PROVIDER_LATENCY_MS=500
TEST_PROVIDER_SUCCESS_RATE=0.95